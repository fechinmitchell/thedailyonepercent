{
  "manifest_version": 3,
  "name": "Daily Redpill Podcast",
  "description": "Get a new podcast recommendation every day",
  "version": "1.0",
  "permissions": ["storage"],
  "host_permissions": ["https://raw.githubusercontent.com/*"],
  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "48": "icon.png",
    "128": "icon.png" // It's good to have a higher resolution icon for display in the Chrome Web Store
  }
}



  

